{
  "name": "esboot",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:base": "turbo run dev --filter @dz-web/esboot-common --filter @dz-web/esboot-lint --filter @dz-web/esboot --filter @dz-web/esboot-bundler-common",
    "dev:webpack": "pnpm run dev:base --filter @dz-web/esboot-bundler-webpack",
    "dev:vite": "pnpm run dev:base --filter @dz-web/esboot-bundler-vite",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "pub": "lerna publish --force-publish=*",
    "test": "vitest",
    "clean": "pnpm -r exec -- rm -rf node_modules && rm -rf node_modules && rm pnpm-lock.yaml"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@vitest/ui": "^1.6.0",
    "lerna": "^8.1.2",
    "prettier": "latest",
    "tsup": "^8.2.4",
    "turbo": "^2.0.11",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "vite@5.4.2": "./packages/bundler-vite/patches/vite@5.4.2.patch"
    }
  }
}