{
  "name": "@dz-web/esboot-lint",
  "version": "3.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup --minify --dts --format esm,cjs",
    "dev": "tsup --watch --dts --format cjs --onSuccess 'tsc --emitDeclarationOnly --declaration'",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "config",
    "index.d.ts"
  ],
  "dependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@dz-web/eslint-plugin-esboot": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "execa": "^9.3.0",
    "prettier": "^3.3.3",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "33.0.0",
    "stylelint-declaration-use-variable": "1.7.3",
    "stylelint-scss": "5.3.2"
  },
  "devDependencies": {
    "tsup": "^8.2.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourceMap": true,
    "clean": true
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./eslint": {
      "import": "./config/eslint.js",
      "default": "./config/eslint.js",
      "types": "./index.d.ts"
    },
    "./stylelint": {
      "import": "./config/stylelint.js",
      "default": "./config/stylelint.js",
      "types": "./index.d.ts"
    },
    "./commitlint": {
      "import": "./config/commitlint.js",
      "default": "./config/commitlint.js",
      "types": "./index.d.ts"
    },
    "./tsconfig.json": {
      "import": "./config/tsconfig.json",
      "default": "./config/tsconfig.json",
      "types": "./index.d.ts"
    },
    "./prettier.json": {
      "import": "./config/prettier.json",
      "default": "./config/prettier.json",
      "types": "./index.d.ts"
    }
  }
}