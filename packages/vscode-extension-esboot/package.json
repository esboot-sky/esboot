{
  "name": "esboot",
  "private": true,
  "displayName": "esboot",
  "description": "esboot toolkit",
  "version": "3.0.3",
  "publisher": "moonlitusun",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.esbootrc.ts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ESBoot.refreshSidebar",
        "title": "ESBoot: Refresh Sidebar",
        "icon": "$(refresh)"
      },
      {
        "command": "ESBoot.selectPlatform",
        "title": "ESBoot: Select Platform",
        "icon": "$(platform)"
      },
      {
        "command": "ESBoot.selectPageType",
        "title": "ESBoot: Select Page Type",
        "icon": "$(page-type)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ESBoot",
          "title": "ESBoot",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "ESBoot": [
        {
          "id": "ESBoot",
          "name": "ToolBar"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ESBoot.refreshSidebar",
          "when": "view == ESBoot",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 1",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production && vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@dz-web/esboot": "workspace:*",
    "@dz-web/esboot-common": "workspace:*",
    "@dz-web/esboot-bundler-common": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "gitHead": "87e0dbf32da576627520bb3ba36e6623cfcbb21f",
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}