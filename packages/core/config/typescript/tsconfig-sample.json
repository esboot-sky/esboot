{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodeNext",
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": false,
    "noResolve": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@mobile/*": ["src/platforms/mobile/*"],
      "@mobile-native/*": ["src/platforms/mobile/_native/*"],
      "@mobile-browser/*": ["src/platforms/mobile/_browser/*"],
      "@pc/*": ["src/platforms/pc/*"],
      "@pc-native/*": ["src/platforms/pc/_native/*"],
      "@pc-browser/*": ["src/platforms/pc/_browser/*"]
    }
  },
  "exclude": ["**/node_modules", "**/*.spec.ts"],
  "include": [".esbootrc.ts", "src/**/*", "globals.d.ts"]
}
